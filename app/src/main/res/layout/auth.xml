<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGreen"
    android:orientation="vertical"
    android:theme="@style/NoActionBar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/margin_logo"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="@dimen/width_auth_text"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_auth_text"
        android:text="@string/auth_text"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:id="@+id/auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margon_gplus"
        android:src="@drawable/gplus_button"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_intro"
        android:src="@drawable/bg_intro"/>

</LinearLayout>