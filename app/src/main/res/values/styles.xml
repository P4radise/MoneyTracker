<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_name">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_toStartOf">@+id/price</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/margin_l</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_item</item>
    </style>

    <style name="style_price">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_items</item>
        <item name="android:paddingEnd">@dimen/padding_itemsEnd</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignBottom">@+id/name</item>
        <item name="android:layout_alignTop">@+id/name</item>
        <item name="android:background">@drawable/bg_item_price</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_item</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_rouble">
        <item name="android:layout_alignBaseline">@+id/price</item>
        <item name="android:layout_alignEnd">@+id/price</item>
        <item name="android:paddingEnd">@dimen/padding_items</item>
        <item name="android:background">@drawable/bg_item_price</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/size_item</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>
